# NEVER commit .env — contains secrets
# Copy this file to .env and fill in values before running

# Database
DATABASE_URL=sqlite+aiosqlite:///./sna.db
DB_POOL_TIMEOUT=5
DB_CONNECT_TIMEOUT=5

# Policy
POLICY_FILE_PATH=./policies/default.yaml

# Notifications (both optional — notifications sent to whichever is configured)
DISCORD_WEBHOOK_URL=
TEAMS_WEBHOOK_URL=

# EAS — new agents start near-zero trust
DEFAULT_EAS=0.1

# API
API_HOST=127.0.0.1
API_PORT=8000

# Authentication — REQUIRED, app will not start without these
SNA_API_KEY=
SNA_ADMIN_API_KEY=

# CORS
CORS_ALLOWED_ORIGINS=http://localhost:3000

# HTTP client
HTTPX_TIMEOUT_SECONDS=10.0

# Request limits
MAX_REQUEST_BODY_BYTES=1048576

# Rate limiting (requests per minute)
RATE_LIMIT_EVALUATE=100
RATE_LIMIT_ESCALATION_DECISION=20
RATE_LIMIT_POLICY_RELOAD=5

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
